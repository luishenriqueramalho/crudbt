generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "sqlite"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Atletas {
  id String @id @default(uuid())

  nome         String
  dataNiver    String
  maoDominante String
  raquete      String
  sexo         String

  arenas   Arenas @relation(fields: [arenasId], references: [id])
  arenasId String
}

model Arenas {
  id String @id @default(uuid())

  nome         String
  dataInicio   String
  totalQuadras String
  endereco     String
  bairro       String
  cidade       String
  estado       String
  Atletas      Atletas[]
}

model Categorias {
  id String @id @default(uuid())
}
